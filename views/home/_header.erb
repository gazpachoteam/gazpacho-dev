<div class="min-h-screen flex flex-col">
  <header id="main-header" class="whiteboard-bg px-4 md:px-8 pt-4 pb-2 flex justify-between items-center fixed top-0 left-0 w-screen z-10 h-14 transition-all duration-300">
    <a href="/">
      <div class="flex items-center">
        <img id="main-logo" src="isologo-gazpacho.png" alt="Logo" class="h-10 w-10 mr-2 transition-all duration-300" />
        <span class="logo-font tracking-tight text-[1.5rem] lg:text-[2rem]">
          gazpacho dev
        </span>
      </div>
    </a>
    <div class="flex items-center">
      <div class="hidden lg:flex lg:gap-x-12">
        <a href="#about" class="text-sm/6 font-semibold text-gray-900"><%= I18n.t('home.nav.about') %></a>
        <a href="#services" class="text-sm/6 font-semibold text-gray-900"><%= I18n.t('home.nav.services') %></a>
        <a href="#team" class="text-sm/6 font-semibold text-gray-900"><%= I18n.t('home.nav.team') %></a>
        <a href="#contact" class="text-sm/6 font-semibold text-gray-900"><%= I18n.t('home.nav.contact') %></a>
      </div>
      <div class="flex items-center gap-3 h-10 lg:ml-4">
        <form action="/" method="get" class="flex items-center my-0 py-0 h-full">
          <label for="locale" class="sr-only">Language</label>
          <div class="relative">
            <select
              id="locale"
              name="locale"
              class="block appearance-none bg-white border border-gray-300 text-gray-900 px-4 pr-10 rounded leading-tight focus:outline-none focus:bg-white focus:border-blue-500 text-sm font-semibold self-center py-2"
              onchange="this.form.submit()"
            >
              <option value="es" <%= (params[:locale] == 'es' || (!params[:locale] && I18n.locale.to_s == 'es')) ? 'selected' : '' %>>ES</option>
              <option value="en" <%= (params[:locale] == 'en' || (!params[:locale] && I18n.locale.to_s == 'en')) ? 'selected' : '' %>>EN</option>
            </select>
            <div class="pointer-events-none absolute right-2 top-1/2 -translate-y-1/2 flex items-center text-gray-700">
              <svg class="fill-current h-4 w-4" viewBox="0 0 20 20"><path d="M7 7l3-3 3 3m0 6l-3 3-3-3" /></svg>
            </div>
          </div>
        </form>
      </div>
      <div class="flex lg:hidden ml-4">
        <button id="open-mobile-menu" type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
          <span class="sr-only">Abrir menú principal</span>
          <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
      </div>
    </div>
    <!-- Mobile menu backdrop and menu for smooth transitions -->
    <div id="mobile-backdrop" class="fixed inset-0 z-40 bg-black bg-opacity-40 opacity-0 transition-opacity duration-500 pointer-events-none lg:hidden"></div>
    <div id="mobile-menu" class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white p-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10 transform translate-x-full opacity-0 transition-all duration-500 lg:hidden">
      <div class="relative z-50">
        <div class="flex items-center justify-between">
          <a href="#" class="-m-1.5 p-1.5">
            <span class="sr-only">Gazpacho Dev</span>
            <img class="h-10 w-auto" src="isologo-gazpacho.png" alt="" />
          </a>
          <button id="close-mobile-menu" type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700">
            <span class="sr-only">Cerrar menú</span>
            <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="mt-6 flow-root">
          <div class="-my-6 divide-y divide-gray-500/10">
            <div class="space-y-2 py-6">
              <a href="#about" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-gray-900 hover:bg-gray-50"><%= I18n.t('home.nav.about') %></a>
              <a href="#services" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-gray-900 hover:bg-gray-50"><%= I18n.t('home.nav.services') %></a>
              <a href="#team" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-gray-900 hover:bg-gray-50"><%= I18n.t('home.nav.team') %></a>
              <a href="#contact" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-gray-900 hover:bg-gray-50"><%= I18n.t('home.nav.contact') %></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
  <!-- Hero with sticky notes -->
  <section class="whiteboard-bg flex-1 flex items-center px-4 md:px-14 pt-20 lg:pt-0">
    <div class="mx-auto flex flex-col md:flex-row lg:items-center lg:justify-between gap-8 w-full">
      <!-- Left: Hero text -->
      <div class="block w-full lg:w-1/2 justify-center">
        <div>
          <h1 class="font-display text-3xl md:text-6xl font-medium tracking-tight text-balance text-neutral-950">
            <%= I18n.t('home.header.title') %>
          </h1>
          <p class="text-neutral-600 text-md md:text-xl text-justify pr-10">
            <%= I18n.t('home.header.description') %>
          </p>
        </div>
      </div>
      <!-- Right: Sticky notes -->
      <div class="block w-full lg:w-1/2 justify-center">
        <ul>
          <li>
            <a href="#">
              <h2 class="logo-font font-bold text-sm">
                <%= I18n.t('home.header.sticky_notes.note1') %>
              </h2>
              <p class="font-normal text-[1.2rem]" style="font-family: 'Reenie Beanie', cursive;">
                <%= I18n.t('home.header.sticky_notes.note1_description') %>
              </p>
            </a>
          </li>
          <li>
            <a href="#">
              <h2 class="logo-font font-bold text-sm">
                <%= I18n.t('home.header.sticky_notes.note2') %>
              </h2>
              <p class="font-normal text-[1.2rem]" style="font-family: 'Reenie Beanie', cursive;">
                <%= I18n.t('home.header.sticky_notes.note2_description') %>
              </p>
            </a>
          </li>
          <li>
            <a href="#">
              <h2 class="logo-font font-bold text-sm">
                <%= I18n.t('home.header.sticky_notes.note3') %>
              </h2>
              <p class="font-normal text-[1.2rem]" style="font-family: 'Reenie Beanie', cursive;">
                <%= I18n.t('home.header.sticky_notes.note3_description') %>
              </p>
            </a>
          </li>          
        </ul>
      </div>
    </div>
  </section>
</div>